# Désactiver l’indexation
Options -Indexes

RewriteEngine On
RewriteBase /inve-app/

# 1️⃣ Laisser le dossier pagesweb_cn tranquille
RewriteRule ^pagesweb_cn/ - [L]

# 2️⃣ NE PAS réécrire si fichier .php déjà demandé
RewriteCond %{REQUEST_URI} \.php$ [NC]
RewriteRule ^ - [L]

# 3️⃣ Ajouter .php uniquement si l’URL SANS extension existe réellement
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L,QSA]

# 4️⃣ Page 404
ErrorDocument 404 /inve-app/pagesweb_cn/404.php
