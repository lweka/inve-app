# Désactiver l’indexation
Options -Indexes

RewriteEngine On

# 1️⃣ Ne pas réécrire les fichiers et dossiers existants
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# 2️⃣ Ne pas toucher aux fichiers .php appelés directement
RewriteCond %{REQUEST_URI} \.php$ [NC]
RewriteRule ^ - [L]

# 3️⃣ Masquer .php (URL propre)
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+?)/?$ $1.php [L,QSA]

# 4️⃣ Page 404 personnalisée
ErrorDocument 404 /pagesweb_cn/404.php
